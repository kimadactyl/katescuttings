{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "before 9am on monday"
  ],
  "timezone": "Europe/London",
  "minimumReleaseAge": "7 days",
  "prCreation": "not-pending",
  "automerge": true,
  "automergeType": "pr",
  "platformAutomerge": true,
  "packageRules": [
    {
      "description": "Group Rails gems together",
      "groupName": "Rails",
      "matchPackageNames": [
        "/^rails$/",
        "/^action/",
        "/^active/"
      ]
    },
    {
      "description": "Group development gems",
      "groupName": "Development dependencies",
      "matchPackageNames": [
        "/debug/",
        "/rubocop/",
        "/brakeman/"
      ]
    },
    {
      "description": "Group GitHub Actions",
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "GitHub Actions"
    }
  ]
}
