<% provide :template, 'columns' %>

<article>
  <h1>Edit post</h1>

  <%= form_with model: @blog, url: admin_blog_path(@blog) do |f| %>
    <%= render partial: 'fields', locals: { f: f } %>
  <% end %>

  <p><em><%= link_to 'Back to index', admin_blogs_path %></em></p>
</article>

<aside>
  <h2>Current images</h2>
  <div class="gallery upload__gallery">
    <%= render partial: 'blogs/gallery', locals: { images: @blog.images } %>
  </div>
</aside>
