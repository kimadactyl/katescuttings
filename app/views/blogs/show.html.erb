<article class="blog">
  <div class="date"><span><%= @blog.formatted_date %></span></div>

  <h1><%= @blog.title %></h1>

  <% @blog.images.each.with_index(1) do |image, idx| %>
    <%= link_to url_for(image), class: 'lightbox' do %>
      <%= image_tag image.variant(resize_to_fill: [200, 200]) %>
    <% end %>
  <% end %>

  <%= markdown @blog.body %>
</article>

<%= render 'almanac' %>
